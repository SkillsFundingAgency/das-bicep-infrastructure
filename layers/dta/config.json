{
  "config": {
    "tags": {
      "env": "prod",
      "owner": "appteam"
    },

    "baseNetworking": {
      "inflate": true,
      "platformVnetName": "vnet-platform-uksouth",
      "platformVnetAddressSpace": ["10.0.0.0/16"],
      "applicationVnetName": "vnet-app-uksouth",
      "applicationVnetAddressSpace": ["10.1.0.0/16"],

      "platformSubnets": [
        {
          "subnetName": "subnet-platform-web",
          "addressPrefixes": ["10.0.1.0/24"]
        },
        {
          "subnetName": "subnet-platform-data",
          "addressPrefixes": ["10.0.2.0/24"]
        }
      ],

      "applicationSubnets": [
        {
          "subnetName": "subnet-app-core",
          "addressPrefixes": ["10.1.1.0/24"]
        }
      ]
    },

    "webApp": {
      "inflate": true,
      "servicePlans": [
        {
          "name": "asp-webapp-dev",
          "os_type": "Windows",
          "sku_name": "P1v2",
          "worker_count": 2
        },
        {
          "name": "asp-api-linux",
          "os_type": "Linux",
          "sku_name": "EP2"
        }
      ],
      "apps": [
        {
          "name": "webapp-dev",
          "service_plan_id": "asp-webapp-dev",
          "https_only": true,
          "always_on": true,
          "worker_count": 2,
          "client_affinity_enabled": false,
          "client_certificate_enabled": false,
          "client_certificate_mode": "Required",
          "http2_enabled": true,
          "app_settings": {
            "ENV": "dev"
          },
          "connection_string": {
            "db": {
              "type": "SQLAzure",
              "value": "Server=tcp:...;Database=..."
            }
          },
          "identity_type": "SystemAssigned"
        }
      ]
    }
  },
  
  "purview": {
    "inflate": true,
    "name": "purview-prod",
    "managedResourceGroupName": "rg-managed-purview-prod",
    "skuName": "Standard"
  },
  
  "coreRg": {
    "name": "rg-core",
    "location": "uksouth"
  },

  "appTeamRg": {
    "name": "rg-appteam",
    "location": "uksouth"
  }
}
